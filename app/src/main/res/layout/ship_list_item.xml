<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/border_white_style">

        //En-tÃªtes
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            //ship name header
            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ship"
                />

            //destination port header
            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/destination_port"/>

            //departure date header
            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/departure_date"/>

        </LinearLayout>

        //texts
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            //ship name label
            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/svShipName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            //destination port label
            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/svDestinationPort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            //departure date label
            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/svDepartureDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>